doctype 5
html
	head
		title Bookmarki.es - A place for bookmarks
		link(href='main.css',rel='stylesheet',media='screen')
		link(href='bootstrap.css',rel='stylesheet',media='screen')
		link(href='bootstrap-responsive.css',rel='stylesheet',media='screen')
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
		script(src='bootstrap.js')
		script(src='homepage.js')

	body
		div#main
			div.container
				div.hero-unit
					h1 Bookmarki.es
					h2 A place for bookmarks
					p
						| <!--A personal tag-tag based bookmark site.<br/>
						| Elegant and simple to use, free of charge.-->
					p
						| Please choose an OpenId provider to login :
					p
						span.openid.google(data-openid-provider='https://www.google.com/accounts/o8/id')
						span.openid.yahoo(data-openid-provider='https://me.yahoo.com')
						span.openid.aol(data-openid-provider='http://openid.aol.com/username')

					p
						small * More authentication providers coming soon...

			form#openid-login(action='/login/authenticate')
				input(type='hidden',id='openid_identifier',name='openid_identifier',value='')

		script(type='text/javascript')
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-38533447-1']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();