doctype 5
html
	head
		title Bookmarki.es - A place for bookmarks
		link(href='main.css',rel='stylesheet',media='screen')
		link(href='bootstrap.css',rel='stylesheet',media='screen')
		link(href='bootstrap-responsive.css',rel='stylesheet',media='screen')
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
		script(src='bootstrap.js')
		script(src='homepage.js')

		script(src='bookmarkList.js')
		script(src='bookmarks.js')
		script(src='search.js')

	body
		div#main
			div.container.add-bookmark-form
				h1 Bookmarki.es - A place for bookmarks
				p
					ul.nav.nav-tabs
						li.add-bookmark-tab.active
							a(href='#') Add bookmark
						li.search-bookmarks-tab
							a(href='#') Search

					// Add bookmark form
					div#add-bookmark-form
						div.control-group
							div.controls
								input.input-xxlarge#bookmark-url(type='text',placeholder='Url')
						div.control-group
							div.controls
								input.input-xxlarge#bookmark-tags(type='text',placeholder='Tags (press \'enter\' to create tag)')
								button.btn.add-bookmark#add-bookmark(type='submit') Add Bookmark

					// Search bookmarks form
					div#search-bookmarks-form.hidden
						div.control-group
							div.controls
								input.input-xxlarge#search-bookmark-tags(type='text',placeholder='enter some tags to filter the list')

				// Bookmarks List
				p				
					div.control-group#new-bookmark-tag-list
						
						// This is a block comment and Im on a horse :)
							div.btn-group.tag
								a.btn.btn-primary Just a tag
								a.btn.btn-primary.delete-tag
									span
										i.icon-remove

			div.container.bookmark-container
				h3 Bookmarks
				div#bookmarks-list
					| <!-- Here is the bookmark list -->

		script(type='text/javascript',language='javascript')
			var Bookmarkies = Bookmarkies || {};
			Bookmarkies.Bookmarks = !{JSON.stringify(Bookmarks)};